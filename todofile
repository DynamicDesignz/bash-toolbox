alias btdoc='./bin/btdoc'
alias ron='ron -br5 --manual="Bash-Toolbox Manual" --organization="Bash-Toolbox"'

= Build homepage and documentation

  : Cleaning temporary files
    + rm -rf tmp/

  : Creating homepage and documentation directories

    + mkdir -p tmp/man
    + mkdir -p homepage/man
    + mkdir -p homepage/doc/api

  : Building manpages and htdocs for applications

    for app in bin/*; do
      + btdoc ${app} tmp/man/${app##*/}.ron
      + ron tmp/man/${app##*/}.ron
      + mv tmp/man/${app##*/}.?.html homepage/man
    done

  : Building manpages and htdocs for libraries
    for src in lib/bash-toolbox/*.sh; do
      + btdoc ${app} tmp/man/${app##*/}
      + ron tmp/man/${app##*/}
      + mv tmp/man/${app##*/} homepage/man
    done

    for src in lib/bash-toolbox/cli/*.sh; do
      + btdoc ${app} tmp/man/${app##*/}
      + ron tmp/man/${app##*/}
      + mv tmp/man/${app##*/}.?.* homepage/man
    done

  : Building index for homepage

    + ron README.mkd
    + mv README.html homepage/index.html

= Push news to remote repositories

  hosts=(github codaset)

  : Pushing news to ${hosts[@]}
    for remote in ${hosts[@]}; do
      + git push ${remote} news
    done

